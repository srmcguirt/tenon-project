{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "skipLibCheck": true
  },
  "include": ["packages", "package/config", "vite.config.ts", "__tests__"]
}
